pipeline {
						agent any 
							stages {
								stage ('Build'){
										steps {					
												sh '/opt/maven/apache-maven-3.6.0/bin/mvn clean package'
					}
					}
								stage ('deploy') {
										steps {
											sshagent(['tocatdev']) {
													sh 'scp -o StrictHostkeyChecking=no target/*.war ec2-user@172.31.8.16:/home/ec2-user/apache-tomcat-9.0.0.M10/webapps/'
					}
					}
					post{
                success{
                    echo 'Now Archiving ....'
                     sshagent(['tocatdev']) {
                    sh 'scp archiveArtifacts artifacts : **/*.war ec2-user@172.31.8.16:/home/ec2-user/artifact/'
                }
		}
            }

					}
					}
					}
